<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabTextStyle</item>
		<item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
		<item name="android:actionOverflowButtonStyle">@style/MyActionBarOverFlowMenu</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabTextStyle</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="actionOverflowButtonStyle">@style/MyActionBarOverFlowMenu</item>
        
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">@color/background_red</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_example</item>
        <item name="android:height">62dp</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="background">@color/background_red</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_example</item>
        <item name="height">62dp</item>
        
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_example</item>
        <item name="android:divider">@null</item>
    </style>
    
    <!-- action bar tab text -->
    <style name="MyActionBarTabTextStyle"
           parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/background_red</item>
    </style>
    
    <style name="MyActionBarOverFlowMenu" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow_menu</item>
    </style>
    
    <style name="MyActionBarWidget" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>
</resources>
